<UserControl x:Class="TimsWpfControls_Demo.Views.ThemeManger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TimsWpfControls_Demo.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:model="clr-namespace:TimsWpfControls_Demo.Model"
             d:DataContext="{d:DesignInstance model:MainViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Grid.IsSharedSizeScope="True">
        <metro:MetroHeader Header="BaseTheme">
            <ComboBox ItemsSource="{Binding BaseThemes}" SelectedItem="{Binding BaseTheme}" />
        </metro:MetroHeader>

        <metro:MetroHeader Header="Accent Color">
            <TextBox Text="{Binding AccentColorName}" />
        </metro:MetroHeader>

        <metro:MetroHeader Header="Highlight Color">
            <TextBox Text="{Binding HighlightColorName}" />
        </metro:MetroHeader>
        
    </StackPanel>
</UserControl>
