<UserControl x:Class="TimsWpfControls_Demo.Views.ColorPickerSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimsWpfControls_Demo.Views" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:ctrls="clr-namespace:TimsWpfControls;assembly=TimsWpfControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:ExampleView_Base x:Name="ExampleView">
        <local:ExampleView_Base.ExampleXaml>
            <![CDATA[<ctrls:ColorPicker Margin="5" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center" />]]>
        </local:ExampleView_Base.ExampleXaml>
        <ctrls:ColorPicker x:Name="colorPicker" 
                           Margin="5"
                           ctrls:ColorPickerHelper.ClearColorButton="True"
                           mah:TextBoxHelper.Watermark="Select a color"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center" />
    </local:ExampleView_Base>
</UserControl>
